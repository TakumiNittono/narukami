{
  "buildCommand": "npm install",
  "crons": [
    {
      "path": "/api/cron/send-scheduled",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/send-step-notifications",
      "schedule": "0 1 * * *"
    }
  ],
  "rewrites": [
    { "source": "/admin", "destination": "/admin/tenant-dashboard.html" },
    { "source": "/admin/dashboard", "destination": "/admin/tenant-dashboard.html" },
    { "source": "/admin/create", "destination": "/admin/create.html" },
    { "source": "/admin/sequences", "destination": "/admin/sequences.html" },
    { "source": "/admin/sequences/create", "destination": "/admin/sequences-create.html" },
    { "source": "/admin/sequences/edit", "destination": "/admin/sequences-edit.html" },
    { "source": "/admin/managed", "destination": "/admin/managed.html" },
    { "source": "/admin/analytics", "destination": "/admin/index.html" },
    { "source": "/admin/users", "destination": "/admin/index.html" },
    { "source": "/admin/settings", "destination": "/admin/index.html" },
    { "source": "/admin/segments", "destination": "/admin/index.html" },
    { "source": "/thanks", "destination": "/thanks.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}
